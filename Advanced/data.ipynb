import pandas as pd
import matplotlib.pyplot as plt

# =========================
# Load Datasets
# =========================
df1 = pd.read_csv("/mnt/data/t20_score_prediction_1st_innings.csv")
df2 = pd.read_csv("/mnt/data/t20_win_prediction_2nd_innings.csv")

# =========================
# 1. Average Run Rate by Over (1st vs 2nd Innings)
# =========================
rr_1st = df1.groupby("Over")["Runs"].mean()
rr_2nd = df2.groupby("Over")["Runs"].mean()

plt.figure(figsize=(10,5))
plt.plot(rr_1st.index, rr_1st.values, marker='o', label="1st Innings")
plt.plot(rr_2nd.index, rr_2nd.values, marker='o', label="2nd Innings")
plt.title("Average Run Rate by Over (1st vs 2nd Innings)")
plt.xlabel("Over")
plt.ylabel("Average Runs")
plt.legend()
plt.show()

# =========================
# 2. Average First Innings Score by Year
# =========================
avg_score_year = df1.groupby("Year")["Total Runs"].mean()

plt.figure(figsize=(8,5))
avg_score_year.plot(kind="bar")
plt.title("Average First Innings Score by Year")
plt.ylabel("Runs")
plt.xlabel("Year")
plt.show()

# =========================
# 3. Win Percentage While Chasing
# =========================
chasing_wins = df2["Match Result"].value_counts(normalize=True) * 100

plt.figure(figsize=(6,6))
plt.pie(
    chasing_wins,
    labels=chasing_wins.index,
    autopct="%1.1f%%",
    startangle=90
)
plt.title("Win Percentage While Chasing")
plt.show()

# =========================
# 4. Top Teams by Avg Run Rate (1st Innings)
# =========================
team_rr = df1.groupby("Batting Team")["Runs"].mean().sort_values(ascending=False).head(10)

plt.figure(figsize=(8,5))
team_rr.plot(kind="barh")
plt.title("Top Teams by Average Run Rate (1st Innings)")
plt.xlabel("Run Rate")
plt.ylabel("Team")
plt.gca().invert_yaxis()
plt.show()

# =========================
# 5. Productivity Pattern – Avg Runs Till Each Over
# =========================
cumulative_runs = df1.groupby("Over")["Runs"].mean().cumsum()

plt.figure(figsize=(10,5))
plt.plot(cumulative_runs.index, cumulative_runs.values, marker='o')
plt.title("Average Runs Till Each Over (1st Innings)")
plt.xlabel("Over")
plt.ylabel("Cumulative Runs")
plt.show()

# =========================
# 6. Wickets Lost vs Match Outcome (2nd Innings)
# =========================
win_wickets = df2[df2["Won"] == 1]["Wickets Lost"]
loss_wickets = df2[df2["Won"] == 0]["Wickets Lost"]

plt.figure(figsize=(6,5))
plt.boxplot([loss_wickets, win_wickets], labels=["Lost", "Won"])
plt.title("Wickets Lost vs Match Outcome (2nd Innings)")
plt.ylabel("Wickets Lost")
plt.show()

# =========================
# 7. Batting First vs Batting Second – Wins
# =========================
batting_win = df2["Batting Position"].value_counts(normalize=True) * 100

plt.figure(figsize=(6,6))
plt.pie(
    batting_win,
    labels=batting_win.index,
    autopct="%1.1f%%",
    startangle=90
)
plt.title("Who Wins More? (Batting First vs Second)")
plt.show()

# =========================
# 8. Winning Percentage of Teams
# =========================
team_win_pct = df2.groupby("Team")["Won"].mean() * 100
team_win_pct = team_win_pct.sort_values(ascending=False)

plt.figure(figsize=(10,7))
team_win_pct.plot(kind="barh")
plt.title("Winning Percentage of Teams (T20 WC)")
plt.xlabel("Winning Percentage (%)")
plt.ylabel("Team")
plt.gca().invert_yaxis()
plt.show()
